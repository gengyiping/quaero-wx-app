/* pages/user/user.wxss */
/* 头部 */

.user-head {
  position: relative;
  text-align: center;
  
}

.user-head .mine-bg {
  width: 750rpx;
  height:400rpx;
}

.user-head .little-icon {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 39%;
  top: 20%;
  text-align: center;
}

.user-head .user-head-pic-wrap {
  position: absolute;
  left: 40%;
  top: 10%;
}
.user-head .user-head-pic  {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 60rpx;
}

.user-name {
  display: block;
  margin-top: 16rpx;
  font-size: 32rpx;
  color: #fff;
  width: 150rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}


/* nav */

.user-nav {
  display: flex;
  justify-content: center;
  padding: 25rpx 0;
  background-color: #fff;
}

.nav-list {
  flex: 1;
  text-align: center;
  margin-top: -520rpx;
  }

.nav-name {
  font-size: 30rpx;
  margin-top: 15rpx;
}

.nav-list .order-pic {
  width: 58rpx;
}


/* optin-list */

.option-cont {
  margin-top: -360rpx;
  background-color: #fff;
}

.option-list {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.option-list .contact-wrap {
  position: absolute;
  left: 0;
  top: 28%;
  opacity: 0;
}
.left-list .left-list1{
  display: flex;
  align-items: center;
}

.left-list image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 20rpx;
  margin-bottom: -8rpx;
}
.left-list1 image {
  width: 46rpx;
  height: 46rpx;
  margin-left: 20rpx;
  margin-bottom: -10rpx;
}




.option-list .option-name {
  display: inline-block;
  font-size: 32rpx;
  margin-left: 30rpx;
  
}

.right-list image{
  width: 20rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.userinfo{
  width: 185rpx;
  height:185rpx;
  border-radius:50%;
  display: flex;
  overflow:hidden;
  text-align: center;
  position: absolute;
  left: 37%;
  top: 5%;
  
}

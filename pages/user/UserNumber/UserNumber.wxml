<view>
<form bindsubmit="usefInfoSubmit" bindreset="">
    <view class="info">
        <view class="info-list" >
            <view class="info-name" space="nbsp">姓      名 </view>
            <input name="userName" focus="true" placeholder="请输入要查询的用户姓名"  value="{{userInfo}}"/>
        </view>
        <view class="info-list">
            <view class="info-name" space="nbsp">手机号码 </view>
            <input name="userPhone" focus="true" placeholder="请输入查询的手机号码" value="{{userInfo.userPhone}}"/>
        </view>
          <view class="selectItem">
        <picker bindchange="bindPickerChange" value="{{listArray[index].id}}" range="{{listArray}}" range-key="{{'name'}}">
            <view class="picker-item" space="nbsp">用户所在组选择:{{listArray[index].name}}</view>
        </picker>
    </view>
    </view>
        <button data-pickerValue="{{index}}" type=""
        form-type="submit" class="btn-submit">查询筛选</button>
        <view class="{{showView?'header_view_show':'header_view_hide'}}">
            <navigator url='/pages/user/bindInst/bindInst' >
<button  type="" form-type="submit" class="btnt">新增组</button>
</navigator>
</view>
</form>
</view>


<scroll-view scroll-x="true" style="width: 1200rpx;">
<view class="itemResult">
    <view class="tips">查询结果</view>

   
        <view class="row" wx:for="{{items}}" wx:key="id">
            <view>{{item.realName}}</view>
           <view>{{item.groupName}}</view>
            <view>{{item.roleDescription}}</view>
            <view class='btns' wx:if="{{flag == 1}}">
                <button data-preview="{{item.download}}"  bindtap="downloadFile"   data-id='{{index}}'size="mini" >查看</button> 
                <button  data-preview="{{item.preview}}"  bindtap="addData"disabled="true" data-id='{{index}}' size="mini">添加</button>
                <button data-preview="{{item.download}}"  bindtap="moveoutData"disabled="true" data-id='{{index}}'size="mini">移除</button>
                <button data-preview="{{item.preview}}"  bindtap="deleteData" disabled="true" data-id='{{index}}' size="mini">删除</button>
                </view>
                <view class='btns' wx:elif="{{flag == 0}}">
                    <button data-preview="{{item.download}}"  bindtap="downloadFile" data-id='{{index}}'size="mini" >查看</button> 
                    <button  data-preview="{{item.preview}}"  bindtap="addData"  data-id='{{index}}' size="mini">添加</button>
                    <button data-preview="{{item.download}}"  bindtap="moveoutData"   data-id='{{index}}'size="mini">移除</button>
                <button data-preview="{{item.preview}}"  bindtap="deleteData"  data-id='{{index}}' size="mini">删除</button>
                </view>
          </view>
       
    </view>
</scroll-view>
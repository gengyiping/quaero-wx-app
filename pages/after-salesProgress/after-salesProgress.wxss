.searchInput {
 font-size: 14px;
 border-radius: 20px;
 color: #bebec4;
 padding-left: 25rpx;
 
 z-index: 99;
 position: fixed;
 margin-top: 110rpx;
}
.searchInput.active{color: #4675F9;}

.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: rgb(255, 255, 255);  white-space: nowrap;position: fixed;top:0rpx; left: 0; z-index: 99;}
.tab-item{margin:0 27rpx;display: inline-block;}
.tab-item.active{color: #4675F9;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 4rpx;width: 53rpx;background: #4675F9;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;
 border-bottom: 1px solid #eee;
}

.form{
    height: 120rpx;width: 60%; box-sizing: border-box;line-height: 80rpx;background: rgb(255, 255, 255); position: relative;top:-20rpx;}
  
.tab-content{margin-top: 50rpx;}
.scoll-h{height: 100%;}

.tablist{
  margin-top: 0.5em;
  width: 100%;
  min-width:2em;
  height:8em;
  color:rgb(10, 10, 10);
  line-height: 1.7em;
  border-radius: 0.4em;
  background:#fff;
}

.allview{
  background:rgb(231, 231, 231);padding-top: 1rpx;
}
.container {
  margin-bottom: 100rpx; /* 因为tabbar有100rpx高度*/
  
}


.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 93%;
    position: absolute;
    top: 130rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}


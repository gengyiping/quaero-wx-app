<!--pages/after-salesProgress/after-salesProgress.wxml-->
<scroll-view scroll-x="true" class="form" scroll-left="{{scrollLeft}}">
    <view class="searchInput {{currenttTab==0?'active':''}}" data-currentt="6" bindtap="swich"
        style="margin-left:18rpx;">显示全部</view>
    <view class="searchInput {{currenttTab==1?'active':''}}" data-currentt="7" bindtap="swich"
        style="margin-left:180rpx;">时间排序</view>
    <picker class="searchInput {{currenttTab==2?'active':''}}" data-currentt="8" bindtap="swich"
        bindchange="bindPickerChange" value="{{index}}" range="{{aay}}" style="margin-left:340rpx;">
        <text class="picker-item" space="nbsp">订单优先级: {{aay[index]}}</text></picker>
</scroll-view>
<view>
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
        <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">未处理</view>
        <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">进行</view>
        <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">完成</view>
        <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="swichNav">评价</view>
        <view class="tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="swichNav">删除</view>
        <view class="tab-item {{currentTab==5?'active':''}}" data-current="5" bindtap="swichNav">全部</view>
    </scroll-view>
    <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab"
        style="height:{{winHeight+100}}rpx">
        <swiper-item wx:for="{{[0,1,2,3,4,5]}}">
            <scroll-view scroll-y="true" class="scoll-h" style="background:rgb(231, 231, 231);">

                <view wx:if="{{(index + 1)==1}}">
                    <import src="./Unprocessed/after-Unprocessed.wxml" />
                    <view wx:for="{{aess}}">
                        <template is="msg"
                            data='{{id:index,equipmentName:item.equipmentName,status:item.status,data:item.data,equipmentProblem:item.equipmentProblem}}' />
                    </view>
                </view>
                <view wx:if="{{(index + 1)==2}}">
                    <import src="./ongoing/after-ongoing.wxml" />
                    <view wx:for="{{arrays}}">
                        <template is="msging"
                            data='{{id:index,equipmentName:item.equipmentName,flag:flag[index],status:item.status,data:item.data,equipmentProblem:item.equipmentProblem}}' />
                    </view>
                </view>
                <view wx:if="{{(index + 1)==3}}">
                    <import src="./finish/after-finish.wxml" />
                    <view wx:for="{{arrayy}}">
                        <template is="msgfinish"
                            data='{{id:index,equipmentName:item.equipmentName,status:item.status,data:item.data,equipmentProblem:item.equipmentProblem}}' />
                    </view>
                </view>
                <view wx:if="{{(index + 1)==4}}">
                    <import src="./assess/after-assess.wxml" />
                    <view wx:for="{{arrayess}}">
                        <template is="msgassess"
                            data='{{id:index,equipmentName:item.equipmentName,status:item.status,data:item.data}}' />
                    </view>
                </view>

                <view wx:if="{{(index + 1)==5}}">
                    <import src="./Unprocessed/after-delete.wxml" />
                    <view wx:for="{{arraydata}}">
                        <template is="msgdata"
                            data='{{id:index,equipmentName:item.equipmentName,status:item.status,data:item.data}}' />
                    </view>
                </view>


                <view wx:if="{{(index + 1)==6}}" class="allview">
                    <import src="./all/after-all.wxml" />
                    <view wx:for="{{arrayyitem}}">
                        <template is="msgItem"
                            data='{{id:index,equipmentName:item.equipmentName,status:item.status,data:item.data,equipmentProblem:item.equipmentProblem}}' />
                    </view>
                </view>
            </scroll-view>
        </swiper-item>
    </swiper>
    <!--<tabBar></tabBar>-->
</view>
<!--pages/after-salesProgress/after-salesProgress.wxml-->
<scroll-view scroll-x="true" class="form" scroll-left="{{scrollLeft}}">
        <view class="searchInput {{currentTab==0?'active':''}}"  data-current="6" bindtap="swich"style="margin-left:18rpx;">只看我的</view>
        <view class="searchInput {{currentTab==1?'active':''}}" data-current="7" bindtap="swich" style="margin-left:260rpx;">时间排序</view>
        <view class="searchInput {{currentTab==2?'active':''}}" data-current="8" bindtap="swich"style="margin-left:488rpx;">订单优先级</view>
 <view class='searchInput' bindtap='selectTap'>
 <image src="../img/xiala.png"style="height: 25rpx;width: 32rpx;margin-left: 636rpx;" ></image></view>



  </scroll-view>




<view>
 <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
        <view class="tab-item {{currentTab==0?'active':''}}"  data-current="0" bindtap="swichNav">全部</view>
        <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">进行</view>
        <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">完成</view>
        <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="swichNav">评价</view>
         <view class="tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="swichNav">未处理</view>
    </scroll-view>
   
   
    <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab"
     style="height:{{winHeight+100}}rpx">
        <swiper-item wx:for="{{[0,1,2,3,4]}}">
            <scroll-view scroll-y="true" class="scoll-h" style="background:rgb(231, 231, 231);">
                 <view wx:if="{{(index + 1)==1}}" class="allview">
                <import src ="./all/after-all.wxml"/>
                <view wx:for="{{arrayyitem}}">
                <template is="msgItem" data='{{id:index.id,equipmentSerialNum:item.equipmentSerialNum,status:item.status,data:item.data}}'/></view>
                </view>

                 <view wx:if="{{(index + 1)==2}}">
                <import src ="./ongoing/after-ongoing.wxml"/>
                 <view wx:for="{{arrays}}">
                <template is="msging" data='{{id:index.id,equipmentSerialNum:item.equipmentSerialNum,status:item.status,data:item.data}}'/> </view>
                </view>
                
                 <view wx:if="{{(index + 1)==3}}">
                <import src ="./finish/after-finish.wxml"/>
                 <view wx:for="{{arrayy}}">
                <template is="msgfinish" data='{{id:index,name:item.name,title:item.title,data:item.data}}'/></view>
                </view>
               
                <view wx:if="{{(index + 1)==4}}">
                <import src ="./assess/after-assess.wxml"/>
                 <view wx:for="{{arrayess}}">
                <template is="msgassess" data='{{id:index,name:item.name,title:item.title,data:item.data}}'/></view>
                 </view>      

                  <view wx:if="{{(index + 1)==5}}">
                <import src ="./assess/after-assess.wxml"/>
                 <view wx:for="{{arrayess}}">
                <template is="msgassess" data='{{id:index,name:item.name,title:item.title,data:item.data}}'/></view>
                 </view>        
            </scroll-view>
        </swiper-item>
    </swiper>
   <!--<tabBar></tabBar>--> 
</view>

<!--pages/after-salesProgress/Unprocessed/after-delete.wxml-->
<template name="msgdata" >
  
  <view  wx:for-item="item" wx:for-index="index" wx:key="*this" >
       <view class="tablist" style="display:flex;flex-direction: column;margin-left: 0.5em;width:95%;" bindtap='readDetailthno' data-id='{{id}}'>
          <view class="flex-view-item">
            <view class="flex-row" style="display: flex;flex-direction: row;">
                <view class="flex-view-item" style="width:70%;margin-left:30rpx">项目：{{equipmentName}}</view>
                <view class="flex-view-item" style="width:30%;">状态: <block wx:if="{{status==0}}"> <view class="flex"> 未处理</view></block>
                <block wx:elif="{{status==4}}"><view class="flex"> 删除</view>
</block></view>
            </view>  
          </view>

          <view class="flex-view-item" style="margin-left:45rpx;text-overflow:ellipsis;word-wrap:break-word;">问题点：{{equipmentProblem}}</view>
          <view class="flex-view-item" style="margin-left:55%">{{data}}</view>
           <view class="flex-view-item">
           
           </view>
         <view class="flex-view-item">
            <view class="flex-row" style="display: flex;flex-direction: row;">
                <view class="flex-view-item" style="font-size: 10px;">
                <button bindtap="lookData" style="width:200rpx;height:60rpx;text-align:center;margin-left:30rpx;line-height: 60rpx;margin-top:30rpx;">查看故障</button>
                </view>
            </view>  
          </view>
          
          
       </view> 
  </view>
</template>

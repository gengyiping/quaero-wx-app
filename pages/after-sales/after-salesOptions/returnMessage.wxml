<form class="returnMessage" bindsubmit="messageSubmit" bindreset="">
   <view class="content">
      <view class="solved-time">
         <picker mode="date" value="{{date}}" start="2020-01-01" end="2030-12-30" bindchange="bindDateChange">
            <text class="timeTips" space="nbsp">故障解决日期：</text>
            <text class="timePicker" space="emsp">      {{date}}     </text>
         </picker>
      </view>
   
<view class="if-solved">本次故障是否解决:</view>
    <radio-group name="depictType" class="depict" bindchange="radioChange">
       <label class="radio" wx:for="{{arrys}}" wx:key="key" >        
       <radio value="{{item.value}}" />{{item.name}}    
      </label>
    </radio-group>

<view class="guide-satisfaction">本次指导是否满意:</view>
    <radio-group name="depictType" class="depict" bindchange="radioChange">
       <label class="radio" wx:for="{{arryss}}" wx:key="key" >        
       <radio value="{{item.value}}" />{{item.name1}}    
      </label>
    </radio-group>
      <view class="instrument-status">
         <text class="instrument-statusTips" space="nbsp">仪器目前运行的状态：</text>
         <input name="instrument-statusInput" focus="true" placeholder="" />
      </view>
      <view class="instrument-satisfaction">
         <text class="instrument-satisfactionTips" space="nbsp">仪器满意度：</text>
         <input name="instrument-satisfactionInput" focus="true" type="number" placeholder="" />
      </view>
      <view class="instrument-Number">
         <text class="instrument-NumberTips" space="nbsp">仪器序列号：</text>
         <input name="instrument-NumberInput" focus="true" type="number" placeholder="" />
      </view>
      <view class="replenishingTips">其它反馈内容补充说明：</view>
   </view>
   <view class="replenishing-description">
      <textarea placeholder="请描述相关情况" auto-focus="true" class="replenishing"></textarea>
      <view class="uploadPicture" bindtap="choosePicture">
         <image src="../../img/uploadPicture.png"></image>
         <block wx:for="{{img_arr}}" wx:key="*this">
        <image class="logoinfo" src="{{item}}" mode="aspectFit" data-id="{{index}}"></image>
        <image   class="logoinfo12" src="../../img/delete.png" mode="scaleToFill" data-id="{{index}}" bindtap='closeOption'></image>
      </block>
      </view>
   </view>
   <button formType="submit" class="btn-submit">提交</button>
</form>
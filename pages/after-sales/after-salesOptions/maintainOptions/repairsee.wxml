<view class="name">售后进度基本信息</view>
<view class="content">
  <view class="machine-name">
    <text class="nameTips" space="nbsp">仪器名称：{{equipmentName}}</text>
  </view>
  <view class="machine-number">
    <text class="numberTips" space="nbsp">仪器序列号：{{equipmentSerialNum}}</text>
  </view>
  <view class="machine-address">
    <text class="addressTips" space="nbsp">仪器所处详细地址：{{equipmentAddress}}</text>
  </view>
  <view class="machine-contacts">
    <text class="contactsTips" space="nbsp">报修联系人：{{contact}}</text>
  </view>
  <view class="machine-problem">
    <text class="problem" space="nbsp">仪器故障问题点：{{equipmentProblem}}</text>
  </view>
  <view class="machine-problems">
    <text class="problem" space="nbsp">仪器故障问题点描述：{{description}}</text>
  </view>
 <!-- <picker bindchange="bindPickerChange" value="{{index}}" range="{{arrays}}">
    <text class="picker-item" space="nbsp">选择转发的人员:    {{arrays[index]}}</text>
  </picker>-->
</view>


 


<!--pages/after-sales/after-salesOptions/maintainOptions/repairsee.wxml-->
<view class="name">售后进度基本信息</view>
<view class="content">
  <view class="machine-name">
    <text class="nameTips" space="nbsp">用户：{{equipmentName}}</text>
  </view>
  <view class="machine-number">
    <text class="numberTips" space="nbsp">手机号：{{equipmentSerialNum}}</text>
  </view>
  <view class="machine-address">
    <text class="addressTips" space="nbsp">角色名称：{{equipmentProblem}}</text>
  </view>
  <view class="machine-contacts">
    <text class="contactsTips" space="nbsp">所在组的id：{{realName}}</text>
  </view>
  <view class="machine-problem">
    <text class="problem" space="nbsp">所在组名称：{{mobile}}</text>
  </view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{arrays}}">
    <text class="picker-item" space="nbsp">选择转发的人员:    {{arrays[index]}}</text>
  </picker>
</view>


 

  <button formType="submit" class="btn-submit">转发提交</button>

